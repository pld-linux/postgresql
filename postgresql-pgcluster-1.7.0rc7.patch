+	int max_buf_size ;
+	int pid;
+
+	pid = getpid();
+	max_buf_size = len;
+	read_ptr = (char*)buf;
+	for (;;)
+	{
+		r = recv(sock,read_ptr + read_size ,max_buf_size - read_size, flag);
+		if (r < 0)
+		{
+			if (errno == EINTR)
+			{
+				continue;
+			}
+#ifdef EAGAIN
+			if (errno == EAGAIN)
+			{
+				return read_size;
+			}
+#endif
+#if defined(EWOULDBLOCK) && (!defined(EAGAIN) || (EWOULDBLOCK != EAGAIN))
+			if (errno == EWOULDBLOCK)
+			{
+				show_error("%s:no data (%s)",func,strerror(errno));
+				return read_size;
+			}
+#endif
+#ifdef ECONNRESET
+			if (errno == ECONNRESET)
+			{
+				PGRclose_sock(&sock);
+				show_error("%s:connection reset (%s)",func, strerror(errno));
+				return -1;
+			}
+#endif
+			show_error("%s:recv() failed. (%s)",func,strerror(errno));
+			read_size = -1;
+			break;
+		}
+		if (r > 0)
+		{
+			read_size += r;
+			if (max_buf_size == read_size)
+			{
+				break;
+			}
+			break;
+		}
+		if (read_size)
+		{
+			return read_size;
+		}
+		else
+		{
+			return -1;
+		}
+	}
+
+	return read_size;
+}

+			lbp->recovery_sock = -1;
+		}
+#ifdef PRINT_DEBUG
+	show_debug("%s:host[%s] port[%d]",func,lbp->hostName,lbp->recoveryPort);
+#endif
+		status = send_packet(lbp,packet);
+		if (lbp->recovery_sock != -1)
+		{
+			close(lbp->recovery_sock);
+			lbp->recovery_sock = -1;
+		}
+		lbp ++;
+	}
+	return STATUS_OK;
+}

+	char *p=NULL;
+
+	/* set pg_dumpall path */
+	memset(pg_dumpall, 0, sizeof(pg_dumpall));
+	strncpy(pg_dumpall, PgDumpPath, sizeof(pg_dumpall));
+	p = strrchr(pg_dumpall,'/');
+	if (p == NULL)
+	{

+	if (host_ptr == NULL)
+	{
+		return false;
+	}
+	while(host_ptr->useFlag != TBL_END)
+	{
+		if (host_ptr->useFlag == TBL_USE)
+		{
+			return true;
+		}
+		host_ptr ++;
+	}
+	return false;
+}

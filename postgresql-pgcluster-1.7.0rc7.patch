+		PGR_Set_Cluster_Status(STATUS_REPLICATED);
+		close(fd);
+		return STATUS_ERROR;
+	}
+	memset(&packet,0,sizeof(RecoveryPacket));
+	r_size = read_packet(fd,&packet);
+	if (r_size <= 0)
+	{
+		rtn =  STATUS_ERROR;
+	}
+	switch (ntohs(packet.packet_no))
+	{
+		case RECOVERY_QUEUE_DATA_ANS:
+			rtn =  STATUS_OK;
+			break;
+		default:
+			rtn =  STATUS_ERROR;
+			break;
+	}
+	PGR_Set_Cluster_Status(STATUS_REPLICATED);
+	close(fd);
+	return rtn;

+static int
+rsync_pg_data(char * src, char * dest)
+{
+	int status;
+	char *args[12];
+	int pid, i = 0;
+
+	args[i++] = "rsync";
+	args[i++] = "-a";
+	args[i++] = "-r";
+	if (RsyncCompress)
+		args[i++] = "-z";
+	args[i++] = "--delete";
+	args[i++] = "-e";
+	args[i++] = RsyncOption;
+	args[i++] = src;
+	args[i++] = dest;
+	args[i++] = NULL;
+
+	pid = fork();
+	if (pid == 0)
+	{
+		status = execv(RsyncPath,args);
+	}
+	else
+	{
+		for (;;)
+		{
+			int result;
+			result = wait(&status);
+			if (result < 0)
+			{
+				if (errno == EINTR)
+					continue;
+				return STATUS_ERROR;
+			}
+
+			if (WIFEXITED(status) == 0 || WEXITSTATUS(status) != 0)
+				return STATUS_ERROR;
+			else
+				break;
+		}
+	}
+	return STATUS_OK;
+}

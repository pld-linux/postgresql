+static char *
+assignVariables(CState * st, char *sql)
+{
+	int			i, j;
+	char	   *p, *name, *val;
+	void	   *tmp;
+
+	i = 0;
+	while ((p = strchr(&sql[i], ':')) != NULL)
+	{
+		i = j = p - sql;
+		do
+			i++;
+		while (isalnum(sql[i]) != 0 || sql[i] == '_');
+		if (i == j + 1)
+			continue;
+
+		name = malloc(i - j);
+		if (name == NULL)
+			return NULL;
+		memcpy(name, &sql[j + 1], i - (j + 1));
+		name[i - (j + 1)] = '\0';
+		val = getVariable(st, name);
+		free(name);
+		if (val == NULL)
+			continue;
+
+		if (strlen(val) > i - j)
+		{
+			tmp = realloc(sql, strlen(sql) - (i - j) + strlen(val) + 1);
+			if (tmp == NULL)
+			{
+				free(sql);
+				return NULL;
+			}
+			sql = tmp;
+		}
+
+		if (strlen(val) != i - j)
+			memmove(&sql[j + strlen(val)], &sql[i], strlen(&sql[i]) + 1);
+
+		strncpy(&sql[j], val, strlen(val));
+
+		if (strlen(val) < i - j)
+		{
+			tmp = realloc(sql, strlen(sql) + 1);
+			if (tmp == NULL)
+			{
+				free(sql);
+				return NULL;
+			}
+			sql = tmp;
+		}
+
+		i = j + strlen(val);
+	}
+
+	return sql;
+}

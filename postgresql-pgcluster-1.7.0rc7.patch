+			(char *) hp->h_addr,
+			hp->h_length);
+
+	if (connect(fd, (struct sockaddr *)&addr, len) < 0)
+	{
+		show_error("%s: connect() failed: %s",func,strerror(errno));
+		close(fd);
+		return -1;
+	}

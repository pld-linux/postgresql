+	count = 0;
+	while (setsockopt(sock, IPPROTO_TCP, TCP_NODELAY, (char *) &one, sizeof(one)) < 0)
+	{
+		show_error("%s: setsockopt TCP_NODELAY error (%s)",func, strerror(errno));
+		if ( count > PGLB_CONNECT_RETRY_TIME)
+		{

+static int
+ping_cluster(PGconn * conn)
+{
+	int status = 0;
+	PGresult * res = (PGresult *)NULL;
+
+	res = PQexec(conn, PING_QUERY );
+
+	status = PQresultStatus(res);
+	if (res != NULL)
+	{
+		PQclear(res);
+	}
+	if ((status == PGRES_NONFATAL_ERROR ) ||
+		(status == PGRES_FATAL_ERROR ))
+	{
+		return STATUS_ERROR;
+	}
+	return STATUS_OK;
+}

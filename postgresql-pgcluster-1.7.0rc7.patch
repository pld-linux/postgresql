+				if (is_prepared_as_select(query_string) == true)
+				{
+					pgr_skip_in_prepared_query = true;
+				}
+				break;	
+			case PGR_MESSAGE_EXECUTE:
+			case PGR_MESSAGE_DEALLOCATE:
+				if (is_statement_as_select(query_string) == true)
+				{
+					pgr_skip_in_prepared_query = true;

+unsigned int
+PGRget_ip_by_name(char * host)
+{
+	struct hostent *hp = NULL;
+	unsigned int ip = 0;
+	unsigned char uc = 0;
+	int i;
+
+	if ((host == NULL) || (*host == '\0'))
+	{
+		return 0;
+	}
+	hp = gethostbyname( host );
+	if (hp == NULL)
+	{
+		return 0;
+	}
+	for (i = 3 ; i>= 0 ; i --)
+	{
+		uc = (unsigned char)hp->h_addr_list[0][i];
+		ip = ip | uc;
+		if (i > 0)
+		ip = ip << 8;
+	}
+	return ip;
+}
+
+int
+PGRget_time_value(char *str)
+{
+	int i,len;
+	char * ptr;
+	int unit = 1;
+	
+	if (str == NULL)
+		return -1;
+
+	len = strlen(str);
+	ptr = str;
+	for (i = 0; i < len ; i ++,ptr++)
+	{
+		if ((! isdigit(*ptr)) && (! isspace(*ptr)))
+		{
+			switch (*ptr)
+			{
+				case 'm':
+				case 'M':
+					unit = 60;
+					break;
+				case 'h':
+				case 'H':
+					unit = 60*60;
+					break;
+			}
+			*ptr = '\0';
+			break;
+		}
+	}
+	return (atoi(str) * unit);
+}

+	}
+	p++;
+	strcpy(p,"pg_dumpall");
+
+	/* set psql path */
+	p = NULL;
+	memset(psql, 0, sizeof(psql));
+	strncpy(psql, PgDumpPath, sizeof(psql));
+	p = strrchr(psql,'/');
+	if (p == NULL)
+	{
+		return STATUS_ERROR;
+	}
+	p++;
+	strcpy(p,"psql");
+	p+=4;
+	*p = '\0';
+
+	snprintf(exec_command,sizeof(exec_command),"%s -i -o -c -h %s -p %d -U %s | %s -p %d template1",

+static int
+get_table_name(char * table_name, char * query, int position )
+{
+	
+	int i,wc;
+	char * p;
+	char * sp;
+	int length;
+
+	if ((table_name == NULL) || (query == NULL) || (position < 1))
+	{
+		return STATUS_ERROR;
+	}
+	length = strlen(query);
+	p = query;
+	wc = 1;
+	sp = table_name;
+	for (i = 0 ; i < length ; i ++)
+	{
+		while(isspace(*p))
+		{
+			p++;
+			i++;
+		}
+		while((*p != '\0') && (! isspace(*p)))
+		{
+			if ((*p == ';') || (*p == '('))
+				break;
+			if (wc == position)
+			{
+				*sp = *p;
+				sp++;
+			}
+			p++;
+			i++;
+		}
+		if (wc == position)
+		{
+			*sp = '\0';
+			break;
+		}
+		wc++;
+	}
+	return STATUS_OK;
+}

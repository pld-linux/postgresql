+#endif			
+
+	pool_add_param(&MASTER(backend)->params, name, value);
+
+#ifdef PRINT_DEBUG
+	pool_param_debug_print(&MASTER(backend)->params);
+#endif
+
+	if (REPLICATION)
+		if (pool_read2(SECONDARY(backend), len) == NULL)
+			return POOL_END;
+
+	return pool_write(frontend, p, len);
+

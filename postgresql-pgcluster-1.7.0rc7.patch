+		wp = strstr(p,"from");
+	
+	if (wp != NULL)
+	{
+		p = wp + strlen("FROM");
+		*p = '\0';
+		p ++;
+		while ((isspace(*p)) && (*p != '\0')) p++;
+		while ((!isspace(*p)) && (*p != '\0')) p++;
+		p2 = p;
+		buf = malloc(size);
+		if (buf == NULL)
+		{
+			return NULL;
+		}
+		snprintf(buf,size,"%s stdin %s",p1,p2);

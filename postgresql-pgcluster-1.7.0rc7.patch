+/*
+* send startup packet
+*/
+static int send_startup_packet(POOL_CONNECTION_POOL_SLOT *cp)
+{
+	int len;
+
+	len = htonl(cp->sp->len + sizeof(len));
+	pool_write(cp->con, &len, sizeof(len)); 
+	return pool_write_and_flush(cp->con, cp->sp->startup_packet, cp->sp->len);
+}

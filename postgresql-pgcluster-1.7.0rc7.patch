+	{
+		return STATUS_ERROR;
+	}
+	conf_file = malloc(strlen(dir) + strlen(fname) + 2);
+	if (conf_file == NULL)
+	{
+		return STATUS_ERROR;
+	}
+	sprintf(conf_file,"%s/%s",dir,fname);

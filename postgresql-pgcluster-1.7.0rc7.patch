+			 */	       		
+			if(usock!=-1 && 
+			   PGRsend_cascade(usock,header,query)==STATUS_OK) 
+			{
+					return STATUS_OK;
+			}
+			else
+			{
+					/**
+					 * current upper cascade is missing.

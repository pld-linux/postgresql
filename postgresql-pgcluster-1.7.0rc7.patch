+/*--------------------------------------------------------------------
+ * SYMBOL
+ *		daemonize()
+ * NOTES
+ *		Daemonize this process
+ * ARGS
+ *		void
+ * RETURN
+ *		none
+ *--------------------------------------------------------------------
+ */
+static void 
+daemonize(void)
+{
+	char *	func = "daemonize()";
+	int		i;
+	pid_t		pid;
+
+	pid = fork();
+	if (pid == (pid_t) -1)
+	{
+		show_error("%s:fork() failed. (%s)",func, strerror(errno));
+		exit(1);
+		return;					/* not reached */
+	}
+	else if (pid > 0)
+	{			/* parent */
+		exit(0);
+	}
+
+#ifdef HAVE_SETSID
+	if (setsid() < 0)
+	{
+		show_error("%s:setsid() failed. (%s)", func,strerror(errno));
+		exit(1);
+	}
+#endif
+
+	i = open("/dev/null", O_RDWR);
+	dup2(i, 0);
+	dup2(i, 1);
+	dup2(i, 2);
+	close(i);
+}

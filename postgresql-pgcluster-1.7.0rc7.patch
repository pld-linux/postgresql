+char *
+PGR_scan_terminate( char * str)
+{
+	char * p;
+	int sflag = 0;
+	int dflag = 0;
+	int lflag = 0;
+	int i = 0;
+	char tag[256];
+
+	if (str == NULL)
+		return NULL;
+	p = str;
+	memset(tag,0,sizeof(tag));
+	while ( *p != '\0' )
+	{
+		if ((!strncmp(p,"--",2)) ||
+			(!strncmp(p,"//",2)))
+		{
+			while (( *p != '\n') && (*p != '\0'))
+			{
+				p++;
+			}
+			continue;
+		}
+
+		switch (*p)
+		{
+			case '\'':
+				sflag ^= 1;
+				break;
+			case '\"':
+				dflag ^= 1;
+				break;
+			case '$':
+				i = 0;
+				p++;
+				while (( *p != '\n') && (*p != '\0'))
+				{
+					if (isalnum(*p) == 0)
+					{
+						if (*p == '$')
+						{
+							lflag ^= 1;
+						}
+						break;
+					}
+					else
+					{
+						if (i >= sizeof(tag))
+							break;
+						if (lflag == 0)
+						{
+							tag[i] = *p;
+						}
+						else
+						{
+							if (tag[i] != *p)
+							{
+								break;
+							}
+						}
+						i++;
+					}
+					p++;
+				}
+				break;
+			case '\\':
+				p +=2;
+				continue;
+				break;
+			case ';':
+				if ((!sflag) && (!dflag) && (!lflag))
+					return p;
+				break;
+		}
+		p++;
+	}
+	return NULL;
+}

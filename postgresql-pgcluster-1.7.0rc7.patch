+
+	for (i = 0; i < (sizeof(DDLs) / sizeof(char *)); i++)
+	{
+		res = PQexec(con, DDLs[i]);
+		if (strncmp(DDLs[i], "drop", 4) && PQresultStatus(res) != PGRES_COMMAND_OK)

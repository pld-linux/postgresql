+static void
+set_cluster_status(ClusterTbl * host_ptr, int status)
+{
+	if (host_ptr == NULL)
+		return;
+	if (status == TBL_ERROR)
+	{
+		host_ptr->retry_count ++;
+		if (host_ptr->retry_count > PGLB_CONNECT_RETRY_TIME )
+		{
+			PGRset_status_on_cluster_tbl(status, host_ptr);
+		}
+	}
+	else
+	{
+		host_ptr->retry_count = 0;
+		PGRset_status_on_cluster_tbl(status, host_ptr);
+	}
+}

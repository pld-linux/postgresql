+static int
+remove_dir(char * dir_name)
+{
+	DIR * dp = NULL;
+	struct dirent *dirp = NULL;
+	char fname[256];
+	int status = 0;
+
+	if ((dp = opendir(dir_name)) == NULL)
+	{
+		return STATUS_ERROR;
+	}
+	while ((dirp = readdir(dp)) != NULL)
+	{
+		if ((!strcmp(dirp->d_name,".")) ||
+			(!strcmp(dirp->d_name,"..")))
+		{
+			continue;
+		}
+		sprintf(fname,"%s/%s",dir_name,dirp->d_name);
+		status = remove(fname);
+		if (status < 0)
+		{
+			remove_dir(fname);
+		}
+	}
+	closedir(dp);
+	if (remove(dir_name) < 0)
+	{
+		return STATUS_ERROR;
+	}
+	return STATUS_OK;
+}

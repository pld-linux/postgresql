+static int
+fixup_socket_for_cascades(int *sock, ReplicateServerInfo *target) 
+{
+	if (*sock > 0)
+	{
+		close(*sock);	
+		*sock=-1;
+	}
+        if(target!=NULL) {
+	       return PGR_Create_Socket_Connect(sock,target->hostName,target->portNumber);
+        }
+	return STATUS_OK;
